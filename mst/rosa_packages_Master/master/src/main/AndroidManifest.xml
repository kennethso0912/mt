<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubtrobot.master">

    <permission
        android:name="com.ubtrobot.master.permission.MASTER"
        android:description="@string/permission_description"
        android:label="@string/permission_label"
        android:protectionLevel="signature" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round">

        <service android:name="com.ubtrobot.master.KeepAliveService" />

        <provider
            android:name=".MasterProvider"
            android:authorities="com.ubtrobot.provider.master"
            android:exported="true" />

    </application>

</manifest>