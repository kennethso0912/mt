<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubtrobot.master.sample.mstskill">

    <uses-permission android:name="com.ubtrobot.master.permission.MASTER" />

    <application
        android:name="com.ubtrobot.master.sample.mstskill.SampleSkillApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".DanceSkill"
            android:exported="true">
            <meta-data
                android:name="master.skill"
                android:resource="@xml/skill_dance" />
        </service>

        <service
            android:name=".SightseeSkill"
            android:exported="true">
            <meta-data
                android:name="master.skill"
                android:resource="@xml/skill_sightsee" />
        </service>

        <service
            android:name=".SingingSkill"
            android:exported="true">
            <meta-data
                android:name="master.skill"
                android:resource="@xml/skill_singing" />
        </service>

        <service
            android:name=".TalkingSkill"
            android:exported="true">
            <meta-data
                android:name="master.skill"
                android:resource="@xml/skill_talking" />
        </service>
    </application>

</manifest>
